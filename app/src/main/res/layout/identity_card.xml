<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bac">

    <TextView
        android:id="@+id/apply_identity_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/apply_identity_card"
        android:textSize="35sp" />

    <RelativeLayout
        android:id="@+id/identitycard"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="60dp" >

        <RelativeLayout
            android:id="@+id/identity_nameRel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:clickable="true"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/identity_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/name"
                android:textColor="#000"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/identity_nameEdittext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dip"
                android:layout_toRightOf="@id/identity_name"
                android:background="@null"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/studentidRel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/identity_nameRel"
            android:clickable="true"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/identity_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/identity_id"
                android:textColor="#000"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/identity_idEdittext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dip"
                android:layout_toRightOf="@id/identity_id"
                android:background="@null"
                android:textSize="15sp" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/identity_cancel"
            android:layout_width="65.83dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/cancel"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/identity_back"
            android:layout_width="wrap_content"
            android:layout_height="50dip"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="20dip" />

        <Button
            android:id="@+id/identity_submit"
            android:layout_width="65.83dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="@string/submit"
            android:textColor="#000000" />
    </LinearLayout>

</LinearLayout>